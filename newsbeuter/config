#newsbeuter
browser "w3m %u"
auto-reload yes
reload-time 30
reload-threads 10
feed-sort-order "firsttag"
cleanup-on-quit "yes"
confirm-exit  "yes"
refresh-on-startup "yes"
notify-beep "yes"
notify-screen "yes"
max-items 125
error-log "~/.newsbeuter/error.log"
user-agent "newsbeuter"

bind-key LEFT quit
bind-key RIGHT open

#podbeuter
download-path ~/podbeuter/
player "mplayer"
podcast-auto-enqueue "no"

